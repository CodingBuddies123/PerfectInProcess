@model PerfectInProcess.Models.ViewModel.RegisterViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layouts/_DefaultLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
</head>
<body>
    <div>
        @using (Html.BeginForm("RegisterAccount", "Account", FormMethod.Post))
        {
            <fieldset class="form-horizontal align-center" style="height:400px;width:600px">
                <legend class="col-lg-10 col-lg-offset-4">Register</legend>
                <div class="form-group">
                    <label for="FirstName" id="register" class="col-lg-2">First Name</label>
                    <div class="col-lg-10">
                        @Html.TextBoxFor(Model => Model.FirstName, new { @class = "form-control registertextboxes", id = "FirstName", placeholder = "First Name", Name = "FirstName" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="LastName" id="register" class="col-lg-2 control-label">Last Name</label>
                    <div class="col-lg-10">
                        @Html.TextBoxFor(Model => Model.LastName, new { @class = "form-control registertextboxes", id = "LastName", placeholder = "Last Name", Name = "LastName" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Email" id="register" class="col-lg-2 control-label">Email</label>
                    <div class="col-lg-10">
                        @Html.TextBoxFor(Model => Model.Email, new { @class = "form-control registertextboxes", id = "Email", placeholder = "Email", Name = "Email" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="UserName" id="register" class="col-lg-2 control-label">User Name</label>
                    <div class="col-lg-10">
                        @Html.TextBoxFor(Model => Model.UserName, new { @class = "form-control registertextboxes", id = "UserName", placeholder = "User Name", Name = "UserName", value = "" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Password" id="register" class="col-lg-2 control-label">Password</label>
                    <div class="col-lg-10">
                        @Html.PasswordFor(Model => Model.Password, new { @class = "form-control registertextboxes", id = "Password", placeholder = "Password", Name = "Password" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="ConfirmPassword" id="register" class="col-lg-2">Retype Password</label>
                    <div class="col-lg-10">
                        @Html.PasswordFor(Model => Model.ConfirmPassword, new { @class = "form-control registertextboxes", id = "ConfirmPassword", placeholder = "Retype Password", Name = "ConfirmPassword" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="registerbuttons">
                        <input type="button" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");" class="btn btn-default" value="Cancel" />
                        <input type="submit" class="btn btn-primary" value="Submit" />

                    </div>
                </div>
                <br />
                <br />
                <br />
                <div class="error">

                    @Html.ValidationSummary("", new { @class = "text-danger" })
                </div>
            </fieldset>
        }
    </div>
</body>
</html>
