@model PerfectInProcess.Models.ViewModel.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Layouts/_DefaultLayout.cshtml";
}

<h2>Login</h2>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
</head>
<body>
    <div>
        @using (Html.BeginForm("RegisterAccount", "Register", FormMethod.Post))
        {
            <fieldset class="form-horizontal align-center" style="height:400px;width:600px">
                <legend class="col-lg-10 col-lg-offset-6">Login</legend>
                <div class="form-group">
                    <label for="FirstName" id="register" class="col-lg-2">First Name</label>
                    <div class="col-lg-10">
                        @Html.TextBoxFor(Model => Model.UserName, new { @class = "form-control registertextboxes", id = "UserName", placeholder = "Username or Email"})
                    </div>
                </div>
                <div class="form-group">
                    <label for="LastName" id="register" class="col-lg-2 control-label">Last Name</label>
                    <div class="col-lg-10">
                        @Html.PasswordFor(Model => Model.Password, new { @class = "form-control registertextboxes", id = "Password", placeholder = "Password"  })
                    </div>
                </div>               
                <div class="form-group">
                    <div class="registerbuttons">
                        <input type="button" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");" class="btn btn-default" value="Cancel" />
                        <input type="submit" class="btn btn-primary" value="Submit" />

                    </div>
                </div>
                <br />
                <br />
                <br />
                <div class="error">

                    @Html.ValidationSummary("", new { @class = "text-danger" })
                </div>
            </fieldset>
        }
    </div>
</body>
</html>
